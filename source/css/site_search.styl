.filter {
    filter: blur(0.2rem);
}

#search-pop {
    width: 35rem;
    height: 40rem;
    position: absolute;
    top: 50%;
    left: 50%;
    background-color: #2E3846;
    transform: translate(-50%, -50%);
    text-align: center;
    z-index: 9999;
    // display: none;
    padding: 1rem;
    border-radius: 0.4rem;
    overflow: auto;
    box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);

    #search-close {
        width: 2.2rem;
        cursor: pointer;
        vertical-align: middle;
        display: inline-block;
    }

    #search-input {
        border: none;
        width: 82%;
        padding: 0.5rem;
        margin: 0.5rem;
        font-size: 1.2rem;
        display: inline-block;
    }

    #search-body {
        ul {
            padding: 0;
            width: 90%;
            margin: 0 auto;

            li {
                .search-title {
                    font-size: 0.9rem;
                }

                .search-tag {
                    a {
                        font-size: 0.6rem;
                    }
                }

                margin: 0.3rem 0;
                padding: 0.4rem 0.6rem;
                list-style: none;
                text-align: left;
                border-radius: 0.4rem;
                border-bottom: 1px solid #eaecef;
                transition: all 0.3s;

                a {
                    font-size: 0.8rem;
                    color: #eaecef;

                    div {
                        padding: 0.2rem 0;
                    }
                }
            }

            li:hover a {
                color: #333;
            }

            li:hover {
                background-color: #eaecef;
            }
        }
    }
}