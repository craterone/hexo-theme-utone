.header-div
  height 73px
.header
  width: 100%
  position: fixed
  .utone-title
    height: 23px
    font-size: 13px
    line-height: 23px
    padding-left: 10px
    background-color: #ffffff
    display:block
    img
      width: 16px
      height: 16px
      padding-right: 4px
  .utone-menu
    height: 24px
    line-height: 24px
    border-bottom: 1px solid #282828
    background-color: #3c3f41
    display:block
    ul li a
      float: left
      height: 24px
      color: #bbbbbb
      font-size: 13px
      padding-left: 8px
      padding-right: 8px
      text-align: center
    a:hover
      background-color: #4b6eaf
  .utone-nav
    height: 24px
    line-height: 24px
    border-bottom: 1px solid #282828
    background-color: #3c3f41
    display:block
    ul li
      .utone-nav-a:hover
        background-color: #4b6eaf
      .right-direction
        color: #282828
      a
        float: left
        height: 24px
        color: #bbbbbb
        font-size: 12px
        padding-left: 6px
        padding-right: 6px
        text-align: center


